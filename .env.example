# Family Meal Planner - Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# REQUIRED SETTINGS (must be set for production)
# =============================================================================

# Django secret key - generate a new one for production!
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# PostgreSQL database credentials
POSTGRES_DB=mealplanner
POSTGRES_USER=mealplanner
POSTGRES_PASSWORD=your-secure-password-here

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Set to false in production
DEBUG=true

# Comma-separated list of allowed hostnames
# Example: meals.example.com,192.168.1.100
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF trusted origins (include protocol!)
# Required when behind a reverse proxy or accessing from external hostname
# Example: https://meals.example.com,http://192.168.1.100:8080
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# Port for HTTP (nginx in production)
HTTP_PORT=80

# =============================================================================
# DATABASE
# =============================================================================

# Database URL - auto-configured in docker-compose, set manually otherwise
# DATABASE_URL=postgres://user:password@host:5432/dbname

# =============================================================================
# EMAIL SETTINGS (optional)
# =============================================================================

# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=true
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password
# DEFAULT_FROM_EMAIL=noreply@example.com

# =============================================================================
# LOGGING
# =============================================================================

DJANGO_LOG_LEVEL=INFO
